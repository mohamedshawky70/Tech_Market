                            </svg>
                        </div>
                    </div>
                    <div>
                        <h1 class="fw-bold">@ViewBag.Products</h1>
                        <p class="mb-0 text-primary"><span classname="text-dark me-2">5%</span> Completed</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-6 row">
        <div class="col-md-12 col-12">
            <div class="card">
                <div class="bg-white  py-4 card-header">
                    <h4 class="mb-0">Active Projects</h4>
                </div>
                <div class="table-responsive">
                    <table class="text-nowrap mb-0 table">
                        <thead class="table-light">
                            <tr>
                                <th>Customer</th>
                                <th>Email</th>
                                <th>Total Price</th>
                                <th>Status</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                              @foreach (var item in Model)
                            {
                                
                                <tr>
                                <td class="align-middle">
                                    <div class="d-flex align-items-center">
    
                                        <div class="ms-3 lh-1">
                                            <h5 class=" mb-1">
                                                <a class="text-inherit" >
                                                    <h5>@item.Name</h5>
                                                </a>
                                            </h5>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">
                                        <h5>@item.Email</h5>
                                </td>
                                <td class="align-middle">
                                        <h5>@item.TotalPrice<sup>EGP</sup></h5>
                                </td>
                                <td class="align-middle">
                                    @{
                                        if(@item.OrderStatus==SD.Approved)
                                        {
                                                                <span class="badge bg-success">
                                                                    <h6>@item.OrderStatus</h6>
                                                                </span>
                                        }
                                        else if(@item.OrderStatus==SD.Pending)
                                        {
                                                                <span class="badge bg-warning">
                                                                    <h6>@item.OrderStatus</h6>
                                                                </span>
                                        }
                                        else if(@item.OrderStatus==SD.Canseled)
                                        {
                                                                <span class="badge bg-danger">
                                                                    <h6>@item.OrderStatus</h6>
                                                                </span>
                                        }
                                        else
                                        {
                                                                <span class="badge bg-info">
                                                                    <h6>@item.OrderStatus</h6>
                                                                </span>
                                        }

                                    }
                                    
                                </td>
                                
                            </tr>
                            } 
                        </tbody>
                    </table>
                </div>
                <div class="bg-white text-center card-footer">
                    
                </div>
            </div>
        </div>
