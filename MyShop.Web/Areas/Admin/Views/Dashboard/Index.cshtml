</div>
<style>
    #btn{
        
        
        cursor:pointer;
        background-color:cornflowerblue;
        border-radius:25px;
        position:fixed;
        bottom:10px;
        right:10px;
        display:none;
    }
</style>
<script>
    let btn = document.getElementById('btn');
    window.onscroll=function(){
        if (scrollY > 1500) {
            btn.style.display = 'block';
        }
        else{

            btn.style.display = 'none';
        }
    }
    btn.onclick = function() {
        scroll({ top: 0, left: 0, behavior: "smooth" })
    }
</script>